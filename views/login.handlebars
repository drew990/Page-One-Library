<!--     {{! Login Page  }} -->
<div class="login-background">

  <!--       {{! Login Form }} -->
  <div class="login-container">
    <div class="login-form-style">
      <form class="login-form">
        <h2>Login</h2>
        <p> Login here with your email and password </p>
        <div class="organize">
          <div>
            icon
          </div>
          <input type="text" id="email-login" placeholder="Email" />
        </div>
        <div class="organize">
          <div>
            icon
          </div>
          <input type="password" id="password-login" placeholder="password" />
        </div>
        <button
          type="submit"
          id="login-btn"
          onclick="loginFormHandler()"
        >Login</button>
      </form>
      <form class="signup-form">
        <h2>Sign Up</h2>
        <div class="organize">
          <div>
            icon
          </div>
          <input type="text" id="username-signup" placeholder="Username" />
        </div>
        <div class="organize">
          <div>
            icon
          </div>
          <input type="text" id="email-signup" placeholder="Email" />
        </div>
        <div class="organize">
          <div>
            icon
          </div>
          <input type="password" id="password-signup" placeholder="Password" />
        </div>
        <button type="submit" id="signup-btn" onclick="signupFormHandler()">Sign
          Up</button>
      </form>
    </div>
  </div>
</div>
<div>
  <!--       {{! Call login script from public JS folder }} -->
  <script src="../js/login.js"></script>
</div>
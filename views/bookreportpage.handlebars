<div class="container">
      <section>
        <div class="card-content">
          <h1>{{Title}}</h1>
          <h2>By: {{Author}} </h2>
          <p>Book Score: {{score}} </p>
          <div class="divider"> </div>
          <p>{{Content}}</p>
        </div>
      </section>

    {{#each comments as |comment|}}
      <li>
        {{> comment-details }}
      </li>
      {{/each}}
     <div class="add-comment">
        <form>
          <input type="text" id="book-comment" placeholder="Whats on your mind?" />

        </form>
        <div>
          <button type="submit" id="comment-btn">Submit </button>
        </div>
      </div>
</div>